<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings_activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ToolbarTheme"
        >
        <ImageButton
            android:id="@+id/click_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/home"
            android:onClick="clickHome"
            android:contentDescription="@string/index"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:scrollbars="none"/>
    <TextView
        android:id="@+id/show_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/no_profile_image"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:onClick="updateProfileImage"
        />
    <EditText
        android:id="@+id/user_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teljes név"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Város"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/user_postcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Irányítószám"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/user_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Utca"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/user_mobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobilszám"
        android:inputType="phone"
        />
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
    <Button
        android:id="@+id/save_user_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="@string/save_udata"
        android:onClick="save_user_data"
        />
    <Button
        android:id="@+id/delete_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text="@string/delete_user"
        android:backgroundTint="#BF1919"
        android:onClick="delete_user"
        />
    </LinearLayout>
</LinearLayout>
</ScrollView>